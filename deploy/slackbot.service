[Unit]
Description=Lab Resource Manager Slackbot
After=network.target

[Service]
Type=simple
User=slackbot
Group=slackbot
WorkingDirectory=/opt/slackbot
ExecStart=/opt/slackbot/slackbot
EnvironmentFile=/opt/slackbot/.env
Restart=on-failure
RestartSec=5

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
PrivateTmp=true
ReadWritePaths=/opt/slackbot/data

[Install]
WantedBy=multi-user.target
